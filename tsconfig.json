{
  "compilerOptions":{
    "module":"esnext",
    "target":"es5",
    "allowJs":true,
    "moduleResolution":"node",
    "jsx":"preserve",
    "allowSyntheticDefaultImports":true,
    "noImplicitAny":false,
    "experimentalDecorators":true,
    "emitDecoratorMetadata":true,
    "preserveConstEnums":true,
    "sourceMap":true,
    "pretty":true,
    "removeComments":true,
    "lib":["es2017","dom","scripthost"],
    "typeRoots":["./node_modules/@types"]
  },
  "exclude":[
    "node_modules",
    "configs",
    "scripts",
    "doc",
    "public",
  ]
}